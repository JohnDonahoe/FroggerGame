                android:layout_width="match_parent"
                android:layout_height="50dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/ic_launcher_foreground"
                    android:id="@+id/road04" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/ic_launcher_foreground"
