<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.StartScreen">


    <TextView
            android:id="@+id/topDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CrossTheRoad Game"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="71dp" app:layout_constraintBottom_toTopOf="@+id/exitButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="112dp"
            app:layout_constraintHorizontal_bias="0.415" app:layout_constraintVertical_bias="0.111"/>
    <Button
            android:id="@+id/startButton"
            android:layout_width="184dp"
            android:layout_height="75dp"
            android:text="Start"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/topDisplay" android:layout_marginEnd="115dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp"/>
    <Button
            android:id="@+id/exitButton"
            android:layout_width="184dp"
            android:layout_height="77dp"
            android:text="Exit"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/startButton" android:layout_marginEnd="114dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="114dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>